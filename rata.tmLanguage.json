{
  "name": "Rata",
  "scopeName": "source.rata",
  "fileTypes": ["rata"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#symbols"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#lambda"
    },
    {
      "include": "#module-reference"
    },
    {
      "include": "#data-structures"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.rata",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.rata",
          "match": "\\b(if|else|case|return|assert)\\b"
        },
        {
          "name": "keyword.declaration.rata",
          "match": "\\b(module|function|library|as)\\b"
        },
        {
          "name": "constant.language.rata",
          "match": "\\b(true|false|nil|__module__)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.rata",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.rata",
              "match": "\\\\."
            },
            {
              "name": "constant.other.placeholder.rata",
              "match": "\\{[^}]*\\}"
            }
          ]
        },
        {
          "name": "string.quoted.single.rata",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.rata",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.rata",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.rata",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "symbols": {
      "patterns": [
        {
          "name": "constant.other.symbol.rata",
          "match": ":[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.pipe.rata",
          "match": "\\|>"
        },
        {
          "name": "keyword.operator.arrow.rata",
          "match": "=>"
        },
        {
          "name": "keyword.operator.range.rata",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.comparison.rata",
          "match": "(<=|>=|==|!=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.rata",
          "match": "(\\+|-|\\*|/|\\^|%%)"
        },
        {
          "name": "keyword.operator.assignment.rata",
          "match": "="
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.rata",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*=\\s*function)"
        },
        {
          "name": "support.function.rata",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\.[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "lambda": {
      "patterns": [
        {
          "name": "keyword.operator.lambda.rata",
          "match": "~"
        },
        {
          "name": "variable.parameter.lambda.rata",
          "match": "\\.[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "module-reference": {
      "patterns": [
        {
          "name": "variable.language.module.rata",
          "match": "__module__"
        }
      ]
    },
    "data-structures": {
      "patterns": [
        {
          "name": "punctuation.definition.set.begin.rata",
          "match": "#\\{"
        },
        {
          "name": "punctuation.definition.set.end.rata",
          "match": "\\}"
        },
        {
          "name": "punctuation.definition.tuple.begin.rata",
          "match": "\\{"
        },
        {
          "name": "punctuation.definition.tuple.end.rata",
          "match": "\\}"
        },
        {
          "name": "punctuation.definition.array.begin.rata",
          "match": "\\["
        },
        {
          "name": "punctuation.definition.array.end.rata",
          "match": "\\]"
        }
      ]
    }
  }
}